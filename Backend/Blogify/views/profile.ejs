<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <%- include('./partials/head') %>
</head>

<body style="background-image: linear-gradient(45deg, #7c9885, #b5b682) ">
    <%- include('./partials/navbar') %>
        <div class="md:mt-16 mt-28">
            <h2 class="text-3xl font-bold text-center pt-4 underline">My Profile</h2>
            <div class="my-8 flex gap-6 justify-center items-center">
                <figure class="">
                    <img src="<%= user.profileurl%>" alt="userImage" class="w-12 h-12" />
                </figure>
                <p class="text-2xl font-semibold">
                    <%= user.name %>
                </p>
            </div>
        </div>
        <% if (locals.blogs) { %>
            <% blogs.forEach(blog=> { %>
                <div class="w-full flex justify-center">
                    <div
                        class='my-2 p-2 border-[3px] border-[#333] rounded-lg mx-2 shadow-md cursor-pointer flex justify-between items-center w-4/5'>
                        <p class='md:text-lg md:font-semibold '>
                            <a href="/blog/<%= blog._id %>" class="cursor-pointer">
                                <%= blog.title %>
                            </a>
                        </p>

                        <div className='flex gap-2'>
                            <form action="/api/v1/blog/<%= blog._id %>" method="get">
                                <button type="submit">
                                    <img src="https://cdn-icons-png.flaticon.com/512/3405/3405244.png" alt="deleteicon"
                                        class="w-4 h-4">
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <% } %>

</body>

</html>